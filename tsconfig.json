{
  "compilerOptions": {
    "types": ["jest"],
    "outDir": "./dist/",
    "noImplicitAny": true,
    "lib": ["es5", "dom"],
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types"],
    "jsx": "react-jsx"
  },
  "include": ["src", "cypress"],
  "exlcude": ["node_modules"]
}
